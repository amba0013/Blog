@model Assignment1.Models.User
@{
    Layout = "_Layout";
}
<h4>Enter your Email and Password</h4>
<div class="container">
    <form asp-controller="Home" asp-action="CheckAccount" method="post" style="height:300px; width:300px">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" asp-for="EmailAddress" placeholder="Email Address" required />
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" asp-for="Password" placeholder="Password" required />
        </div>

        <button type="submit" class="btn btn-default">Login</button>
    </form>
</div>